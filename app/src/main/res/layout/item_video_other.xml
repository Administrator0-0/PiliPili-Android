<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="87dp"
    android:layout_marginBottom="3dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="3dp"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            tools:src="@drawable/bg_live_sign_in_banner"
            android:id="@+id/cover_image"
            android:layout_width="138dp"
            android:scaleType="centerCrop"
            android:layout_height="86.4dp" />

        <TextView
            android:paddingHorizontal="3dp"
            android:gravity="center"
            android:paddingVertical="1dp"
            android:background="@drawable/time_in_cover_shape"
            android:paddingTop="1dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="19:14"
            android:id="@+id/text_duration"
            android:textColor="@color/white"
            android:layout_alignEnd="@+id/cover_image"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="4dp"
            android:textSize="12sp"
            android:layout_marginEnd="5dp" />
        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/cover_image"
            android:id="@+id/text_video_title"
            android:lineSpacingExtra="1dp"
            android:maxLines="2"
            tools:text="答题领取pilipili大会员，免费获得新人大礼包"
            android:textSize="13.5sp"
            tools:ignore="SmallSp" />

        <ImageView
            android:layout_marginBottom="3dp"
            android:layout_toEndOf="@+id/cover_image"
            android:layout_above="@+id/relativelayout_bottom"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginStart="8dp"
            android:id="@+id/image_up"
            android:src="@drawable/cvi"/>
        <TextView
            android:layout_marginBottom="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_name_up"
            android:layout_toEndOf="@+id/image_up"
            android:layout_above="@+id/relativelayout_bottom"
            android:layout_marginStart="3dp"
            tools:text="徐巨神"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:textColor="@color/qmui_config_color_gray_5" />

        <RelativeLayout
            android:id="@+id/relativelayout_bottom"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/cover_image"
            android:layout_width="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:id="@+id/image_display"
                android:src="@drawable/cvt"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_number_display"
                android:layout_toEndOf="@+id/image_display"
                android:layout_marginStart="3dp"
                tools:text="3.4万"
                android:textSize="12sp"
                android:layout_centerVertical="true"
                android:textColor="@color/qmui_config_color_gray_5" />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:src="@drawable/cvp"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text_number_display"
                android:id="@+id/image_argues"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_argues"
                android:layout_marginStart="3dp"
                tools:text="1.2万"
                android:id="@+id/text_danmu"
                android:textSize="12sp"
                android:textColor="@color/qmui_config_color_gray_5"
                android:layout_centerVertical="true"/>
        </RelativeLayout>


