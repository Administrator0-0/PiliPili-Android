<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    tools:context=".fragment.RewardVideoFragment">

    <View
        android:clickable="false"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        android:alpha="0.6"/>
    
    <ImageView
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/d_p"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"/>

    <TextView
        android:id="@+id/p_coin_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/back"
        tools:text="P币余额：∞"
        android:textColor="@color/white"
        android:layout_marginBottom="40dp"
        android:textSize="16sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/p_coin_left"
        android:text="点击蓝发妹给视频打赏P币"
        android:textColor="@color/gray_light"
        android:layout_marginBottom="2dp"
        android:textSize="15sp"/>

    <RelativeLayout
        android:layout_marginStart="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/p_coin_left"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="170dp"
            android:layout_height="270dp"
            android:src="@drawable/cmt"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:id="@+id/blue1"/>
        
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cmw"
            android:layout_above="@+id/blue1"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="67dp"
            android:layout_above="@+id/blue1"
            android:layout_centerHorizontal="true"
            android:src="@drawable/c1x"
            android:layout_marginBottom="15dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginEnd="35dp"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/p_coin_left"
        android:layout_marginBottom="30dp">

        <ImageView
            android:layout_alignParentBottom="true"
            android:layout_width="160dp"
            android:layout_height="270dp"
            android:src="@drawable/cmv"
            android:scaleType="centerCrop"
            android:layout_centerHorizontal="true"
            android:id="@+id/blue2"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/cmw"
            android:layout_above="@+id/blue2"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="68dp"
            android:layout_above="@+id/blue2"
            android:layout_centerHorizontal="true"
            android:src="@drawable/c1y"
            android:layout_marginBottom="14dp"/>

    </RelativeLayout>

</RelativeLayout>