<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/user_avatar_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="5dp">

        <com.qmuiteam.qmui.widget.QMUIRadiusImageView
            android:id="@+id/user_avatar"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginTop="10dp" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/comment_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/user_avatar_layout"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="16dp"
        android:clickable="true"
        android:focusable="true">

        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_alpha_60"
            android:textSize="14sp"
            android:text="刘薪王"/>


        <TextView
            android:id="@+id/comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_name"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:textColor="@color/black_alpha_30"
            android:textSize="12sp"
            android:text="2-31"/>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingTop="5dp"
            android:textColor="@color/font_normal"
            android:textSize="14sp"
            android:text="刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了刘薪王太强了"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/comment_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/comment_like"
                android:layout_marginTop="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ba0"/>

            <TextView
                android:id="@+id/comment_like_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:textColor="@color/black_alpha_45"
                android:textSize="18sp"
                android:text="666666"/>

            <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/comment_add"
                android:layout_marginStart="10dp"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/de2" />


<!--            <ImageView-->
<!--                android:id="@+id/comment_more"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginStart="215dp"-->
<!--                android:paddingTop="10dp"-->
<!--                android:src="@drawable/ic_more_grey" />-->

        </LinearLayout>


    </RelativeLayout>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/line_bg" />

</RelativeLayout>