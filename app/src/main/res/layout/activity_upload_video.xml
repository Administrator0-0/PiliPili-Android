<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    android:padding="@dimen/box_inset_layout_padding"
    android:orientation="vertical"
    tools:context=".activity.UploadVideoActivity"
    tools:deviceIds="wear">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/qmui_config_color_blue"
        android:layout_height="45dp">
        <ImageView
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/button_return_publish"
            android:src="@drawable/bwc_white"/>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:gravity="center"
            android:text="发布"
            android:id="@+id/button_publish"
            android:textColor="@color/qmui_config_color_white"
            android:textSize="18sp"
            app:qmui_radius="5dp"
            app:qmui_isRadiusAdjustBounds="true"
            app:qmui_borderColor="@color/qmui_config_color_white"
            app:qmui_borderWidth="2dp"/>
    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="3dp"
        android:background="@color/qmui_config_color_gray_9">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/white"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/image_cover"/>
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="修改封面"
                    android:id="@+id/button_setcover"
                    android:textColor="@color/qmui_config_color_white"
                    android:background="@color/qmui_config_color_gray_5"
                    android:layout_alignParentEnd="true"
                    android:layout_alignBottom="@+id/image_cover"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="3dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="分区 *"
                    android:id="@+id/part_title"
                    android:textSize="15sp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="请选择分区"
                    android:id="@+id/select_part"
                    android:layout_toEndOf="@+id/part_title"
                    android:layout_centerVertical="true"
                    android:paddingStart="10dp"
                    android:layout_marginStart="30dp"
                    android:textColor="@color/qmui_config_color_gray_5"
                    android:textSize="15sp"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/bwo"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginTop="3dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:id="@+id/title_title"
                    android:text="标题 *"
                    android:layout_marginStart="8dp"
                    android:gravity="center"
                    android:textSize="15sp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_toEndOf="@+id/title_title"
                    android:hint="请填写标题"
                    android:paddingTop="5dp"
                    android:background="@color/white"
                    android:paddingStart="10dp"
                    android:textSize="15sp"
                    android:gravity="top"
                    android:layout_marginStart="30dp"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/edit_title"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="0/80"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:id="@+id/bumber_of_title"
                    android:textColor="@color/qmui_config_color_gray_5"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/edit_title"
                    android:layout_marginEnd="10dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="类型 *"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"/>
                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:orientation="horizontal">
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="自制"
                        android:textSize="15sp"
                        android:textColor="@color/qmui_config_color_gray_5"
                        android:gravity="center_vertical"/>
                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:text="转载"
                        android:textColor="@color/qmui_config_color_gray_5"
                        android:textSize="15sp"
                        android:layout_gravity="center_vertical"/>
                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="标签 *"
                    android:id="@+id/title_tag"
                    android:textSize="15sp"
                    android:layout_marginStart="8dp"
                    android:gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_toEndOf="@+id/title_tag"
                    android:text="请选择合适的标签"
                    android:layout_marginStart="30dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:paddingStart="10dp"
                    android:textColor="@color/qmui_config_color_gray_5"
                    android:id="@+id/select_tag"/>
                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:src="@drawable/bwo"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="15dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="简介"
                    android:id="@+id/title_intro"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:hint="请填写简介"
                    android:background="@color/white"
                    android:paddingTop="5dp"
                    android:layout_toEndOf="@+id/title_intro"
                    android:paddingStart="10dp"
                    android:textSize="15sp"
                    android:gravity="top"
                    android:id="@+id/edit_intro"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="10dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:text="0/250"
                    android:layout_below="@+id/edit_intro"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="10dp"
                    android:textSize="15sp"
                    android:id="@+id/number_of_intro"
                    android:textColor="@color/qmui_config_color_gray_5"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="简介内将展示你使用的BGM信息"
                android:textSize="13sp"
                android:textColor="@color/qmui_config_color_gray_4"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/c3c"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:text="我已阅读并接受"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="《pilipili创作公约》"
                        android:textColor="@color/pink_30"
                        android:textSize="12sp"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/br1"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="投稿贴士＆问题反馈"
                        android:textSize="10sp"
                        android:textColor="@color/qmui_config_color_gray_3"
                        android:layout_marginStart="5dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>