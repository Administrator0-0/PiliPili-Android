<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/qmui_config_color_white"
    tools:context=".activity.LoginActivity">
    <RelativeLayout
        android:id="@+id/top_login"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/qmui_config_color_blue">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码登录"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_centerInParent="true"
            android:textColor="@color/qmui_config_color_75_white"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/relativelayout_login_image"
        app:layout_constraintTop_toBottomOf="@+id/top_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp">
        <ImageView
            android:src="@drawable/left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"/>
        <ImageView
            android:src="@drawable/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
        <ImageView
            android:src="@drawable/right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/relativelayout_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/relativelayout_login_image" />

    <TextView
        android:id="@+id/policy_tv"
        app:layout_constraintTop_toBottomOf="@id/relativelayout_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="登录即代表你同意用户协议和隐私政策"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="@color/qmui_config_color_gray_6"/>

    <TextView
        android:id="@+id/help_tv"
        app:layout_constraintTop_toBottomOf="@id/policy_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="遇到问题？查看帮助"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:textColor="@color/qmui_config_color_gray_6"/>

</androidx.constraintlayout.widget.ConstraintLayout>
