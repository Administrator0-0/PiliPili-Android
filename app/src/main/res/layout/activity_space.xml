<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SpaceActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/space_background"
                android:background="@color/qmui_config_color_75_white"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_return_inspace"
                android:layout_marginTop="15dp"
                android:layout_marginStart="15dp"
                android:src="@drawable/return_inspace"
                android:background="@color/qmui_config_color_75_white"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_search_inspace"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="90dp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/search_inspace"
                android:background="@color/qmui_config_color_75_white"/>
            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button_share_inspace"
                android:background="@color/qmui_config_color_75_white"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/share_inspace"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/image_picture_inspace"
                    android:src="@drawable/picture_inspace"
                    android:layout_marginStart="15dp"/>
                <LinearLayout
                    android:id="@+id/linearlayout_inspace_1"
                    android:layout_toEndOf="@+id/image_picture_inspace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="15"
                        android:layout_marginStart="60dp"
                        android:textSize="25sp"
                        android:id="@+id/text_numberoffans_inspace"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="10"
                        android:textSize="25sp"
                        android:id="@+id/text_numberoffocus_inspace"
                        android:layout_marginStart="50dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="50dp"
                        tools:text="10"
                        android:textSize="25sp"
                        android:id="@+id/text_numberofpraise_inspace"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearlayout_inspace_2"
                    android:layout_toEndOf="@+id/image_picture_inspace"
                    android:orientation="horizontal"
                    android:layout_below="@+id/linearlayout_inspace_1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝"
                        android:textSize="20sp"
                        android:layout_marginStart="56dp"
                        android:textColor="@color/qmui_config_color_gray_2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注"
                        android:layout_marginStart="38dp"
                        android:textSize="20sp"
                        android:textColor="@color/qmui_config_color_gray_2"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="获赞"
                        android:textSize="20sp"
                        android:textColor="@color/qmui_config_color_gray_2"
                        android:layout_marginStart="38dp"/>
                </LinearLayout>
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/image_picture_inspace"
                    android:layout_below="@+id/linearlayout_inspace_2"
                    android:text="编辑资料"
                    android:id="@+id/button_editmessage_inspace"
                    android:gravity="center"
                    app:qmui_borderColor="@color/colorPrimary"
                    app:qmui_backgroundColor="@color/qmui_config_color_white"
                    app:qmui_isRadiusAdjustBounds="true"
                    app:qmui_radius="10dp"
                    android:paddingTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="5dp"
                    android:textSize="25sp"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_name_inspace"
                    tools:text="缘_圆我夙愿"
                    android:textSize="30sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="10dp"/>
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/button_tomedal"
                    android:layout_toEndOf="@+id/text_name_inspace"
                    android:text="    勋章  >    "
                    android:textSize="25sp"
                    android:layout_marginTop="15dp"
                    android:layout_marginStart="50dp"/>
                <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_below="@+id/text_name_inspace"
                    android:text="    详情    "
                    android:layout_marginTop="15dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="20sp"
                    android:id="@+id/button_details_inspace"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text_name_inspace"
                    tools:text="个性签名"
                    android:textSize="20sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/text_sign_inspace"
                    android:textColor="@color/qmui_config_color_gray_4"/>
            </RelativeLayout>
        </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_mainpage_inspace"
                    android:text="主页"
                    android:textSize="25sp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/qmui_config_color_gray_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="动态"
                    android:id="@+id/text_trends_inspace"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="60dp"
                    android:textColor="@color/qmui_config_color_gray_2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投稿"
                    android:layout_marginStart="60dp"
                    android:textSize="25sp"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/qmui_config_color_gray_2"
                    android:id="@+id/text_publish_inspace"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="收藏"
                    android:textSize="25sp"
                    android:textColor="@color/qmui_config_color_gray_2"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="60dp"
                    android:id="@+id/text_collection_inspace"/>
            </LinearLayout>
            <com.qmuiteam.qmui.widget.QMUIViewPager
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/viewpager_inspace"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>