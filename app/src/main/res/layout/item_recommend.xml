<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="180dp"
    tools:context=".fragment.RecommendFragment"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/cover_image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            tools:src="@drawable/cover"/>
        <RelativeLayout
            android:id="@+id/relativelayout_image_on_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cover_image"
            android:layout_marginBottom="4dp">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginStart="5dp"
                android:id="@+id/image_display"
                android:src="@drawable/bbb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_number_display"
                android:layout_toEndOf="@+id/image_display"
                android:layout_marginStart="8dp"
                tools:text="3.4万"
                android:textSize="8sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                tools:ignore="SmallSp" />
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@drawable/bmb"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/text_number_display"
                android:id="@+id/image_argues"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_argues"
                android:layout_marginStart="8dp"
                tools:text="1.2万"
                android:textSize="8sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                tools:ignore="SmallSp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="19:14"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="8sp"
                android:layout_marginEnd="5dp"
                tools:ignore="SmallSp" />
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:layout_below="@+id/relativelayout_image_on_cover"
            android:id="@+id/text_video_title"
            tools:text="答题领取pilipili大会员，免费获得新人大礼包"
            android:textSize="10sp"
            tools:ignore="SmallSp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            tools:text="官方"
            android:paddingStart="15dp"
            android:textSize="10sp"
            android:textColor="@color/qmui_config_color_gray_5"
            android:gravity="center_vertical"
            tools:ignore="SmallSp" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>