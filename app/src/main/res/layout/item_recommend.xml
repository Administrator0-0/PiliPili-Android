<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="197dp"
    android:layout_marginBottom="3dp"
    tools:context=".fragment.RecommendFragment"
    app:cardBackgroundColor="@color/white"
    android:layout_marginStart="3dp"
    app:cardElevation="3dp"
    android:layout_marginEnd="3dp"
    app:cardUseCompatPadding="true">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <ImageView
            tools:src="@drawable/bg_live_sign_in_banner"
            android:id="@+id/cover_image"
            android:layout_width="196dp"
            android:scaleType="centerCrop"
            android:layout_height="122.7dp" />

        <ImageView
            android:layout_width="196dp"
            android:scaleType="fitXY"
            android:alpha="0.7"
            android:layout_height="40dp"
            android:src="@drawable/background"
            android:layout_alignBottom="@id/cover_image"/>

        <RelativeLayout
            android:id="@+id/relativelayout_image_on_cover"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/cover_image"
            android:layout_marginBottom="3dp">
            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:id="@+id/image_display"
                android:src="@drawable/bbb"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_number_display"
                android:layout_toEndOf="@+id/image_display"
                android:layout_marginStart="3dp"
                tools:text="3.4万"
                android:textSize="11sp"
                android:layout_centerVertical="true"
                android:textColor="@color/white"
                tools:ignore="SmallSp" />
            <ImageView
                android:layout_width="18dp"
                android:layout_height="17dp"
                android:src="@drawable/bmb"
                android:layout_marginStart="8dp"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/text_number_display"
                android:id="@+id/image_argues"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/image_argues"
                android:layout_marginStart="3dp"
                tools:text="1.2万"
                android:id="@+id/text_danmu"
                android:textSize="11sp"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                tools:ignore="SmallSp" />
            <TextView
                android:paddingTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="19:14"
                android:id="@+id/text_duration"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:textSize="11sp"
                android:layout_marginEnd="5dp" />
        </RelativeLayout>
        <TextView
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativelayout_image_on_cover"
            android:id="@+id/text_video_title"
            android:lineSpacingExtra="1dp"
            android:maxLines="2"
            tools:text="答题领取pilipili大会员，免费获得新人大礼包"
            android:textSize="13.5sp"
            tools:ignore="SmallSp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="综合"
            android:layout_alignParentBottom="true"
            android:id="@+id/video_type"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="8dp"
            android:textSize="12sp"
            android:textColor="@color/qmui_config_color_gray_5"
            android:gravity="center_vertical"
            tools:ignore="SmallSp" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>