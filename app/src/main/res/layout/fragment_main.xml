<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.MainFragment">

    <Button
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="看视频"
        android:id="@+id/video"
        android:layout_marginTop="160dp"
        android:textSize="100sp"/>

    <RelativeLayout
        android:layout_below="@+id/video"
        android:id="@+id/bar_mainpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/qmui_config_color_blue">
        <ImageButton
            android:id="@+id/button_oneself"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/head"
            android:background="@color/qmui_config_color_blue"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"/>
        <EditText
            android:id="@+id/edit_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/button_oneself"
            android:hint="请输入搜索内容"
            android:gravity="center"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_below="@+id/bar_mainpage"
        android:id="@+id/recyclerview_mainpage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>