<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/qmui_config_color_blue">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="买币"
            android:id="@+id/buy_coin"
            android:textSize="100sp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:text="看视频"
        android:id="@+id/video"
        android:layout_marginTop="160dp"
        android:textSize="100sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_mainpage"
            android:src="@drawable/item_mainpage"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_channel"
            android:src="@drawable/item_channel"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_trends"
            android:src="@drawable/item_trends"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_aboutme"
            android:src="@drawable/item_aboutme"/>
    </LinearLayout>
</RelativeLayout>