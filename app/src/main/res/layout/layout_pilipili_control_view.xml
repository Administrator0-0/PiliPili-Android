<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/danmuku_bar"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:layout_gravity="bottom"
        android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="@dimen/dkplayer_controller_height"
                android:layout_height="@dimen/dkplayer_controller_height"
                android:layout_gravity="center"
                android:padding="@dimen/dkplayer_controller_icon_padding"
                android:src="@drawable/dkplayer_ic_action_arrow_back" />

            <EditText
                android:id="@+id/input_danmuku"
                android:layout_width="0dp"
                android:layout_height="@dimen/dkplayer_controller_height"
                android:layout_weight="1"
                android:hint="发个友善的弹幕见证当下"
                android:layout_marginTop="10dp"
                android:background="@drawable/edit_danmuku_shape"
                android:maxLines="1"/>

            <ImageView
                android:id="@+id/send"
                android:layout_width="@dimen/dkplayer_controller_height"
                android:layout_height="@dimen/dkplayer_controller_height"
                android:layout_gravity="center"
                android:padding="@dimen/dkplayer_controller_icon_padding"
                android:src="@drawable/share_inspace" />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="85dp"
            android:textColor="@color/white"
            android:text="弹幕字号"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/de2"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="80dp"
            android:layout_marginStart="140dp"
            android:background="@drawable/de2"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="130dp"
            android:textColor="@color/white"
            android:text="弹幕位置"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="125dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/de2"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="125dp"
            android:layout_marginStart="140dp"
            android:background="@drawable/de2"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="125dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/de2"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="170dp"
            android:textColor="@color/white"
            android:text="弹幕颜色"/>


        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="165dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/de2"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="165dp"
            android:layout_marginStart="140dp"
            android:background="@drawable/de2"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="165dp"
            android:layout_marginStart="200dp"
            android:background="@drawable/de2"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="165dp"
            android:layout_marginStart="260dp"
            android:background="@drawable/de2"/>


    </RelativeLayout>


    <LinearLayout
        android:id="@+id/bottom_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center_vertical"
        android:background="@drawable/dkplayer_shape_stardard_controller_bottom_bg"
        android:orientation="vertical">

        <SeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="bottom"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="-10dp"
            android:background="@null"
            android:max="1000"
            android:maxHeight="2dp"
            android:minHeight="2dp"
            android:paddingEnd="0dp"
            android:paddingStart="0dp"
            android:progressDrawable="@drawable/dkplayer_layer_progress_bar"
            android:thumb="@drawable/dkplayer_seekbar_thumb"
            android:thumbOffset="0dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="center_vertical"
            android:background="@drawable/dkplayer_shape_stardard_controller_bottom_bg"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_play"
                android:layout_width="@dimen/dkplayer_controller_height"
                android:layout_height="@dimen/dkplayer_controller_height"
                android:padding="@dimen/dkplayer_controller_icon_padding"
                android:src="@drawable/dkplayer_selector_play_button" />

            <TextView
                android:id="@+id/curr_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dkplayer_controller_time_text_size"
                tools:text="00:00" />



            <TextView
                android:id="@+id/total_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="@dimen/dkplayer_controller_time_text_size"
                tools:text="00:00" />

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/send_danmuku"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:text="发送个友善的弹幕见证当下"
                app:qmui_backgroundColor="#B3808A87"
                app:qmui_borderColor="#B3808A87"
                android:textColor="@android:color/white"
                app:qmui_radius="1px"/>

            <ImageView
                android:id="@+id/fullscreen"
                android:layout_width="@dimen/dkplayer_controller_height"
                android:layout_height="@dimen/dkplayer_controller_height"
                android:padding="@dimen/dkplayer_controller_icon_padding"
                android:src="@drawable/dkplayer_selector_full_screen_button" />
        </LinearLayout>

    </LinearLayout>



    <ProgressBar
        android:id="@+id/bottom_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:max="1000"
        android:progressDrawable="@drawable/dkplayer_layer_progress_bar"
        android:visibility="gone" />

</FrameLayout>